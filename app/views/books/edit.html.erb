<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-9 col-lg-6 mx-auto">
      <h1>Editing Book</h1>
      <%= render 'layouts/errors', obj: @book %>

      <%= form_with model: @book, local: true do |f| %>
        <%= f.label :title, 'Title' %><br>
        <%= f.text_field :title, autofocus: true, class: 'form-control' %><br>
        <%= f.label :body, 'Opinion' %><br>
        <%= f.text_area :body, class: 'form-control' %><br>
        <%= f.submit "Update Book", class: 'btn btn-success' %>
      <% end %>

      <%= link_to "Show", book_path(@book) %>  |
      <%= link_to "Back", books_path %>

    </div>
  </div>
</div>
<%= render 'layouts/footer' %>