<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-3 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= render 'layouts/errors', obj: @user %>
      
      <%= form_with model: @user, local: true do |f| %>
        <%= f.label :name, "Name" %><br>
        <%= f.text_field :name, autofocus: true %><br>
        <%= f.label :profile_image, "Image" %><br>
        <%= f.attachment_field :profile_image %><br>
        <%= f.label :introduction, "Introduction" %><br>
        <%= f.text_area :introduction, autofocus: true %><br>
        <%= f.submit "Update User", class: 'btn btn-secondary' %>
      <% end %>
      
    </div>
  </div>
</div>
<%= render 'layouts/footer' %>