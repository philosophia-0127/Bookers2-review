<p class="text-success"><%= flash[:notice] %></p>
<div class="container">
  <div class="row">

    <div class="col-md-3 col-xs-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1 col-xs-9">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, size: '40x40', fallback: 'no_image.jpg' %>
              <% end %>
            </td>
            <td>
              <%= link_to book.title, book_path(book.id) %>
            </td>
            <td>
              <%= book.body %>
            </td>
            <td>
              <%= render 'favorites/favorite-btn', book: book %>
            </td>
            <td>
              <%= link_to "コメント数：#{book.comments.count}", book_path(book), class: 'text-secondary text-decoration-none' %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>

  </div>
</div>